<Window x:Class="Dalister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dalister"
        mc:Ignorable="d"
        Title="Dalister" Height="450" Width="800">
    <Grid Background="Black">
        <Label x:Name="label" Content="Write a Task" HorizontalAlignment="Left" Margin="548,96,0,0" VerticalAlignment="Top" Width="218" Height="60" FontSize="36" Background="#FF38373A"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="548,161,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160" RenderTransformOrigin="0.067,-1.501" Height="36" FontSize="20" Background="#FFA29E9E"/>
        <Button x:Name="button" Content="Set Task" HorizontalAlignment="Left" Margin="548,202,0,0" VerticalAlignment="Top" Height="35" Width="84" Background="#FF232323" Click="button_Click"/>
        <ListBox x:Name="listBox" SelectionMode="Single" Margin="46,23,350,40" Background="#FF2F2F2F"  PreviewMouseLeftButtonDown="listBox_PreviewMouseLeftButtonDown"
                 MouseDoubleClick="listBox_MouseDoubleClick"
                 PreviewKeyDown="listBox_PreviewKeyDown"
                 AllowDrop="True"
                 Drop="listBox_Drop" FontSize="20"/>
        <Button x:Name="saveBtn" Content="Save" HorizontalAlignment="Left" Margin="506,356,0,0" VerticalAlignment="Top" Width="126" Height="53" FontSize="36" Click="saveBtn_Click"/>
        <Button x:Name="openBtn" Content="Open" HorizontalAlignment="Left" Margin="657,356,0,0" VerticalAlignment="Top" Width="126" Height="53" FontSize="36" Click="openBtn_Click"/>
        <Button Content="About" HorizontalAlignment="Left" Margin="569,23,0,0" VerticalAlignment="Top" Width="88" Height="37" FontSize="20" Click="about_Click"/>
        <Button Content="New" HorizontalAlignment="Left" Margin="678,23,0,0" VerticalAlignment="Top" Width="88" Height="37" FontSize="20" Click="new_Click"/>
    </Grid>
</Window>
